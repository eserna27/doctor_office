<section class="page-header">
  <nav class="clearfix navbar fixed-top navbar-expand-lg navbar-dark" style="background-color: #263b5a!important">
    <div class="container">
      <%= link_to doctor_consultations_path, class: "navbar-brand"  do %>
        <i class="fas fa-user-md"></i>
        Mi consultorio
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item <%= 'active' if submenu == :patient %>">
            <%= link_to doctor_patients_path, class: "nav-link" do %>
              <i class="fas fa-users"></i>
              Pacientes
            <% end %>
          </li>
          <li class="nav-item <%= 'active' if submenu == :appointment %>">
            <%= link_to new_doctor_appointment_path, class: "nav-link" do %>
              <i class="far fa-calendar-plus"></i>
              Nueva Cita
            <% end %>
          </li>
          <li class="nav-item <%= 'active' if submenu == :consultation %>">
            <%= link_to doctor_consultations_path, class: "nav-link" do %>
              <i class="fas fa-stethoscope"></i>
              Consultas
            <% end %>
          </li>
          <li class="nav-item <%= 'active' if submenu == :pacient %>">
            <%= link_to destroy_doctor_session_path, method: :delete, class: "nav-link" do %>
              <i class="fas fa-sign-out-alt"></i>
              Salir
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</section>
