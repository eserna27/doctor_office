<section class="page-header">
  <div class="row page-header-principal">
    <div class="col">
      <h2>
        <%= title %>
      </h2>
    </div>
    <div class="col">
      <div class="btn-group float-right" role="group" aria-label="Basic example">
        <%= link_to "Mi perfil", doctor_root_path, class: "btn btn-outline-dark float-right" %>
        <%= link_to "Pacientes", doctor_patients_path, class: "btn btn-outline-dark float-right" %>
        <%= link_to "Consultas", doctor_consultations_path, class: "btn btn-outline-dark float-right" %>
      </div>
    </div>
  </div>
  <div class="row page-header-submenu">
    <div class="col">
      <div class="btn-group float-right" role="group" aria-label="Basic example">
        <% if submenu == :patient %>
          <%= link_to "Crear paciente", new_doctor_patient_path, class: "btn btn-outline-dark float-right" %>
          <%= link_to "Ver pacientes", doctor_patients_path, class: "btn btn-outline-dark float-right" %>
        <% end %>
        <% if submenu == :consultation %>
          <%= link_to "Ver consultas", doctor_consultations_path, class: "btn btn-outline-dark float-right" %>
          <%= link_to "Crear consulta", new_doctor_consultation_path, class: "btn btn-outline-dark float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
