<div class="container">
  <section class="page-header">
    <h2>Iniciar sesión</h2>
  </section>
  <div class="row justify-content-md-center">
    <div class="col-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="form-group col-12">
            <%= f.label :email, "Correo" %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control", style: "width: 100%" %>
          </div>

        <div class="form-group col-12">
          <%= f.label :password, "Contraseña" %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "off", style: "width: 100%" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group col-12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Recordarme" %>
          </div>
        <% end -%>

        <div class="actions col-12">
          <%= f.submit "Entrar", class: "btn btn-block btn-primary" %>
        </div>
      <% end %>
    </end>
  </end>
</end>
